<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/listItemIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/list_item_city_name"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="city name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listItemIcon"
        android:layout_toEndOf="@+id/listItemIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/list_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 deg"
        android:layout_below="@+id/list_item_city_name"
        android:layout_toRightOf="@+id/listItemIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/list_item_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45%"
        android:layout_below="@+id/list_item_temp"
        android:layout_toRightOf="@+id/listItemIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>